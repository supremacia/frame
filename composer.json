{
    "name": "limp/frame",
    "description": "The skeleton for PHP web projects.",
    "keywords": ["framework", "skeleton", "starter", "simple"],
    "license": "MIT",
    "type": "project",
    "homepage": "http://qzumba.com/limp",
    "authors": [{
        "name": "Bill Rocha",
        "email": "prbr@ymail.com"
    }],
    "config": {
        "vendor-dir": ".app/vendor",
        "bin-dir": ".app/vendor/bin",
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": ["/doc", "/*.json", "/.git", "/*.md"]
    },
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            ".app/lib"
        ],
        "psr-4": {
            "App\\": ".app/",
            "Lib\\": ".app/lib/",
            "Model\\": ".app/model/"
        }
    },
    "autoload-dev": {
        "classmap": [
            ".app/tests/StackTest.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php .app/limp optimize"
        ],
        "post-update-cmd": [
            "php .app/limp optimize"
        ],
        "post-create-project-cmd": [
            "php .app/limp key:generate"
        ]
    }
}
